@model LearningManagementSystem.Models.Group

@{
    ViewBag.Title = "Delete";
}

<h2>Grupp</h2>

@*<h3>Är du säker på att du vill radera gruppen?</h3>*@
<div>
    <h4>Radera grupp</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Gruppnamn
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GroupName)
        </dd>

        <dt>
           Bskrivning
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GroupDescription)
        </dd>

        <dt>
            Startdatum
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GroupStart)
        </dd>

        <dt>
            Stutdatum
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GroupEnd)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Radera" class="btn btn-default btn-danger" /> |
            @Html.ActionLink("Tillbaka", "Index")
        </div>
    }
</div>
