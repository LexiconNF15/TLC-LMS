    <input type="button" value="Administrera kurser" class="btn btn-default btn-info" onclick=" location.href='@Url.Action("Index","Courses")' " />
    <input type="button" value="Administrera aktiviteter" class="btn btn-default btn-info" onclick=" location.href='@Url.Action("Index","Activities")' " />
