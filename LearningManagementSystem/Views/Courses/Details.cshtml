    ViewBag.Title = "Details";
}

<h2>Kurs</h2>

<div>
    <h4>Kursdetaljer</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Kursnamn
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CourseName)
        </dd>

        <dt>
            Beskrivning
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CourseDescription)
        </dd>

        <dt>
